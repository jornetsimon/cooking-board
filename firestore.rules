rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        match /users/{uid} {
            allow read, write: if authUidMatches(uid);
        }
        match /users/{uid}/meals/{mealUid} {
            allow read, write: if authUidMatches(uid);
        }
    }

    function authUidMatches(uid) {
        return request.auth != null && request.auth.uid == uid;
    }
}
